#nav_title {
  margin-left: 80px;
  color: white;
  display: inline-block;
  background: red;
  padding: 5px;
  font-size: 26px;
  text-shadow: 2px 0 0 black, -2px 0 0 black, 0 2px 0 #000, 0 -2px 0 #000, 1px 1px #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000;
  border-style:solid;
  border-bottom-color:#aaa;
  border-right-color:#aaa;
  border-top-color:#ddd;
  border-left-color:#ddd;
  border-radius:5px;
  -moz-border-radius:5px;
  -webkit-border-radius:5px;
  transform:rotate(-7deg);
  -ms-transform:rotate(-7deg); /* IE 9 */
  -webkit-transform:rotate(-7deg); /* Opera, Chrome, and Safari */

}
#left_picture_frame {
  background: url('<%= asset_path("/assets/pictureframe.png") %>') no-repeat;
  position: absolute;
  -webkit-background-size: 100% auto;
  -moz-background-size: 100% auto;
  -o-background-size: 100% auto;
  background-size: 100% auto;
  width: 170px;
  height: 130px;
}

#left_sidebar_header, #left_picture_frame {
  transform:rotate(-3deg);
  -ms-transform:rotate(-3deg); /* IE 9 */
  -webkit-transform:rotate(-3deg); /* Opera, Chrome, and Safari */
}

#left_sidebar_header {
  padding: 45px 0 65px 45px;
 
}

div#intro_text {
  font-family: "Coronette", Sans-Serif;
  top: -100%;
  padding: 10px;
  position: absolute;
  width: 300px;
  border: 4px solid black;
  border-radius: 5px;
  -moz-border-radius:5px;
  -webkit-border-radius:5px;
  background-color: white;
  
}
#reset:hover{
  background-color: #FBFDF2;
  color: red;
  border-style:solid;
  border-bottom-color:#aaa;
  border-right-color:#aaa;
  border-top-color:#ddd;
  border-left-color:#ddd;
}
#reset {
  text-align: center;
  position: absolute;
  border-radius: 5px;
  bottom: 0;
  right: 18%;
  color: rgb(102, 51, 0);
  height: 85px;
  background: url('<%= asset_path("/assets/crumpled.png") %>') no-repeat bottom;
  -webkit-background-size: 100% auto;
  -moz-background-size: 100% auto;
  -o-background-size: 100% auto;
  background-size: 100% auto;
  
}
#share_text {
  float: right;
  display: none;
}