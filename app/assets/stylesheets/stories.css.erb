body {
  font-family: "Coronette";
  padding-bottom: 50px;
}
#container {
  max-width: 960px;
  min-width: 900px;
  max-height:700px;
  margin: auto;
  margin-bottom: 30px;
  position: relative;
  padding-bottom: 8px;
}

nav {
  padding: 30px 0;
}
.addthis_toolbox {
  float: right;
  position: relative;
  top: -8px;
  width: 300px;

}
#side_bar_left {
  width: 20%;
  display: inline-block;
  height: 80vh;
  vertical-align: top;
  padding: 0 15px;

}

#side_bar_right {
  width: 20%;
  display: inline-block;
  height: 80vh;
  vertical-align: top;
  padding: 0 15px;
  min-height: 500px;

}
#fridge {
  background-color: #FBFDF2;
  background-image: url('<%= asset_path("/assets/handle.png") %>');
  background-repeat: no-repeat;
  background-position: right 30px top 50px;
  max-height: 580px;
  padding: 15px;
  width: 400px;
  display: inline-block;
  position: relative;
  height: 80vh;
  vertical-align: top;
  border-radius: 35px;
  border: 2px #888888 solid;
  -moz-box-shadow: 5px 9px 9px 2px #888888;
  -webkit-box-shadow: 5px 9px 9px 2px #888888;
  box-shadow: 5px 9px 9px 2px #888888;
}


